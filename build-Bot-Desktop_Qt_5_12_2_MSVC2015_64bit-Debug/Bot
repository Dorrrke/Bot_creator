@client.command( pass_context = True )
async def massmass( ctx, mes : str ):
	print(ctx.author.name + '[command]: mass_send ( ' + mes + ' )')
	for i in client.get_channel(697822717050748979).members:
		await i.send(mes)
client.run(TOKEN)
